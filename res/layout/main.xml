<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A3DAEC"
    android:orientation="vertical" >
    
    	<RelativeLayout
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content" >

	     <ImageView
            android:id="@+id/imgDra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/btnEng"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_launcher" />
	    <ImageView
            android:id="@+id/imgSnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:adjustViewBounds="true"
            android:layout_gravity="right"
            android:clickable="true"
            android:contentDescription="@string/imgSound"
            android:layout_toRightOf="@id/imgDra"
            android:scaleType="fitCenter"
            android:src="@drawable/sound_on" />
	    
	    
	   <Button
            android:id="@+id/btnEngActy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/imgDra"
            android:layout_below="@id/imgSnd"
            android:text="@string/btnEng" />
	   
	       <Button
        android:id="@+id/btnMalActy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imgDra"
        android:layout_below="@id/btnEngActy"
        android:text="@string/btnMal" />

        <Button
        android:id="@+id/btnNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imgDra"
        android:layout_below="@id/btnMalActy"
        android:text="@string/btn_number" />
</RelativeLayout>



</LinearLayout>
